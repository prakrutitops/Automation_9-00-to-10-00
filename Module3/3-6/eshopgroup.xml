<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="suites">
	
	<test  name="smoke">
		
		 <groups>
 			 <run>
  				<include name="smoke"></include>
  			</run>
  		</groups>
		
		<classes>
			
				<class name="eshop.HomeEx"/>
      			<class name="eshop.PaymentEx"/>
      			<class name="eshop.CartEx"/>
		
		</classes>
		
		
		
	</test>
	
	
	
	<test  name="sanity">
		
		 <groups>
 			 <run>
  				 <include name="sanity"></include>
 				 <exclude name="smoke"></exclude>
  			</run>
  		</groups>
		
		<classes>
			
				<class name="eshop.HomeEx"/>
      			<class name="eshop.PaymentEx"/>
      			<class name="eshop.CartEx"/>
		
		</classes>
		
		
		
	</test>
	
</suite>

